		{
			"name": "Authentication success",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var res = pm.response.json();",
							"pm.environment.set('_token', res.token);",
							"",
							"pm.test('Authentication success with status code 200', function() {",
							"    pm.response.to.have.status(200);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
